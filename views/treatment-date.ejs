    <script>
        // Set date range: today to 30 days in the future
        const today = new Date();
        const maxDate = new Date();
        maxDate.setDate(today.getDate() + 30);

        const todayStr = today.toISOString().split('T')[0];
        const maxDateStr = maxDate.toISOString().split('T')[0];

        const dateInput = document.getElementById('treatmentDate');
        dateInput.min = todayStr;
        dateInput.max = maxDateStr;

        // Set default value to today
        dateInput.value = todayStr;

        const dateOverlay = document.getElementById('dateOverlay');

        // Format the display to show dd/mm/yyyy in a more user-friendly way
        function updateDateDisplay() {
            const dateValue = dateInput.value;
            if (dateValue) {
                const date = new Date(dateValue);
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();

                // Hide overlay when date is selected
                dateOverlay.style.display = 'none';

                // Update the input's visual appearance
                dateInput.style.color = '#6c757d';
            } else {
                // Show overlay when no date is selected
                dateOverlay.style.display = 'flex';
                dateOverlay.textContent = 'dd/mm/yyyy';
            }
        }

        // Handle focus and blur to manage overlay
        dateInput.addEventListener('focus', function() {
            dateOverlay.style.display = 'none';
        });

        dateInput.addEventListener('blur', function() {
            if (!this.value) {
                dateOverlay.style.display = 'flex';
            }
        });

        // Format on load and when changed
        updateDateDisplay();
        dateInput.addEventListener('change', updateDateDisplay);

        // Prevent manual typing while allowing datepicker to work
        dateInput.addEventListener('keydown', function(e) {
            // Allow arrow keys, enter, escape, and tab for datepicker navigation
            const allowedKeys = ['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'Enter', 'Escape', 'Tab'];
            if (!allowedKeys.includes(e.key)) {
                e.preventDefault();
                return false;
            }
        });

        dateInput.addEventListener('paste', function(e) {
            e.preventDefault(); // Block paste
            return false;
        });

        // Validate date is within range when changed
        dateInput.addEventListener('change', function() {
            const selectedDate = this.value;
            if (selectedDate < todayStr || selectedDate > maxDateStr) {
                this.value = todayStr; // Reset to today if invalid
                alert('Please select a date between today and 30 days from now.');
            }
        });

        // Handle form submission
        document.getElementById('treatmentDateForm').addEventListener('submit', function(e) {
            e.preventDefault();

            // Ensure treatment date has a value (default to today if empty)
            let treatmentDate = document.getElementById('treatmentDate').value;
            if (!treatmentDate) {
                treatmentDate = todayStr;
                document.getElementById('treatmentDate').value = todayStr;
            }

            // Store form data in sessionStorage
            const formData = {
                treatmentDate: treatmentDate,
                notes: document.getElementById('notes').value || '', // Default to empty string
                timestamp: new Date().toISOString()
            };

            sessionStorage.setItem('treatmentData', JSON.stringify(formData));

            // Navigate to identity check page
            window.location.href = '/identity-check';
        });
    </script>
